#!/bin/bash

SUCCESS_CC=32
FAILURE_CC=31
SUCCESS_MSG="OK"
FAILURE_MSG="FAILED"

get_status() {
    if [[ $# -eq 1 ]]; then
        if [[ $1 -eq 0 ]]; then
            echo -e "\x1b[1;${SUCCESS_CC}m${SUCCESS_MSG}\x1b[m"
        else
            echo -e "\x1b[0;${FAILURE_CC}m${FAILURE_MSG}\x1b[m"
        fi
    fi
}

(
cd $HOME/personal/dotfiles

sudo rsync --recursive etc/ /etc
echo "Copying over etc files...[$(get_status $?)]"

rsync --recursive --filter=':en- .excl' env/ $HOME
echo "Copying over env files...[$(get_status $?)]"

rsync --recursive --exclude=".git" env-private/ $HOME
echo "Copying over private env files...[$(get_status $?)]"

running_tmux=$(pgrep tmux)

if [[ ! -z $TMUX ]] || [[ ! -z $running_tmux ]]; then
    tmux source-file ~/.config/tmux/tmux.conf &>/dev/null
    echo "Sourcing tmux config...[$(get_status $?)]"
fi

killall -SIGUSR2 waybar
echo "Reloading waybar...[$(get_status $?)]"

running_ghostty=$(pgrep ghostty)

if [[ ! -z $running_ghostty ]]; then
    kill -SIGUSR2 $running_ghostty
    echo "Reloading Ghostty config...[$(get_status $?)]"
fi

# reset hash table for commands to refresh command resolution 
# in case I updated binaries 
hash -r
echo "Reset commands resolution hash table...[$(get_status $?)]"
)
